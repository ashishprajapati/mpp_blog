- if !cookies[:subscription]
  #subscription-popup.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .subscription-box-popup
          %h4
            Seven hundreds of dollars a year on maintaining your car
          %div.subscription-box-body
            Get exclusive promotions and money saving guide to your inbox 
          %p
          .row
            .col-md-2
            .col-md-8
              = form_tag subscription_posts_path, :method=>"get" do
                .input-group
                  %input.form-control{:type => "email", :placeholder => "Enter Email Address", :name=>"subscription[email]", :class=>"search-field", :required=>true}
                  %input.form-control{:type => "hidden", :name=>"subscription[ip_address]", :value=>"#{request.remote_ip}"}
                    %span.input-group-btn
                      %button.btn.btn-dark{:type => "submit"}
                        SUBSCRIPE
            .col-md-2
          = link_to "#", :class=>"no-thanks-subscription" do
            %p.subscription-box-footer 
              No thanks, I'm happying extra to keep my car on the road